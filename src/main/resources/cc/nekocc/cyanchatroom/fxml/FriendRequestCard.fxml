<?xml version="1.0" encoding="UTF-8"?>

<?import atlantafx.base.theme.Styles?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="70.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="cc.nekocc.cyanchatroom.features.chatpage.contactagree.FriendRequestCardController">
    <children>
        <StackPane fx:id="avatar_pane_" layoutX="10.0" layoutY="10.0" prefHeight="50.0" prefWidth="50.0" AnchorPane.bottomAnchor="10.0" AnchorPane.leftAnchor="10.0" AnchorPane.topAnchor="10.0" />
        <Label fx:id="username_label_" layoutX="80.0" layoutY="15.0" text="Username" AnchorPane.leftAnchor="80.0" AnchorPane.topAnchor="15.0">
            <font>
                <Font name="Microsoft YaHei Bold" size="16.0" />
            </font>
        </Label>

        <HBox fx:id="action_buttons_pane_" alignment="CENTER_LEFT" layoutX="80.0" layoutY="40.0" spacing="10.0" visible="false" AnchorPane.leftAnchor="80.0" AnchorPane.topAnchor="40.0">
            <children>
                <Button fx:id="accept_button_" mnemonicParsing="false" onAction="#handleAccept" text="接受" />
                <Button fx:id="refuse_button_" mnemonicParsing="false" onAction="#handleReject" text="拒绝" />
            </children>
        </HBox>

        <Label fx:id="status_label_" layoutX="80.0" layoutY="42.0" text="Status text" visible="false" AnchorPane.leftAnchor="80.0" AnchorPane.topAnchor="42.0">
            <font>
                <Font name="Microsoft YaHei" size="12.0" />
            </font>
        </Label>
    </children>
</AnchorPane>
